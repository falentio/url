---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
    <div class="flex flex-col items-center justify-center flex-auto">
        <div
            class="bg-muted px-6 py-3 rounded-md flex gap-4 flex-col items-center relative"
        >
            <div
                class="flex items-center gap-2 absolute -top-3 left-4 bg-background px-2"
            >
                <span class="text-sm text-lineNumber">confirm-redirect.js</span>
            </div>
            <p class="text-comment">// Did you want to leave the page?</p>
            <a
                href={Astro.url.searchParams.get("to")}
                rel="noopener noreferrer"
                class="md:w-auto bg-keyword hover:bg-keyword/90 text-background px-6 py-2 rounded-md"
            >
                visit()
            </a>
        </div>
    </div>
</Layout>
