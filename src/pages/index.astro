---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import ShortenForm from "../components/ShortenForm.tsx";
// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <Header />

  <main>
    <section class="container px-6 py-16 md:py-24">
      <div class="max-w-3xl mx-auto space-y-8">
        <div class="space-y-2">
          <h1
            class="text-3xl md:text-5xl font-bold tracking-tight text-foreground mt-6 mb-4"
          >
            <span class="text-keyword">URL</span>.<span class="text-function"
              >shorten</span
            ><span class="text-foreground">(</span><span class="text-variable"
              >yourUrl</span
            ><span class="text-foreground">)</span>
          </h1>
          <p class="text-variable">
            Shorten your url as easy as click the button bellow, no login
            required for shortening all of your long url.
          </p>
        </div>
      </div>
      <div class="mt-12 w-full max-w-2xl mx-auto">
        <div class="bg-muted border border-muted rounded-md p-6 relative">
          <div
            class="flex items-center gap-2 absolute -top-3 left-4 bg-background px-2"
          >
            <span class="text-sm text-lineNumber">url-shortener.js</span>
          </div>
          <div class="flex gap-2 mb-2">
            <span class="text-comment"
              >// Paste your URL below to generate a short link</span
            >
          </div>
          <ShortenForm url={Astro.request.url} client:load />
        </div>
      </div>
    </section>
  </main>
</Layout>
